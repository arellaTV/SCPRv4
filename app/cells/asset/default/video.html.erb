<figure class="o-figure <%= aspect %> <%= @options[:class] %>">
  <img
    class="o-figure__img"
    src="<%= src %>"
    alt="<%= caption %>"
    title="<%= title %>"
    role="img"
    aria-label="<%= title %>"
    data-assethost="<%= assethost %>"
    data-ah-videoid="<%= videoid %>"
    style="background-image:url(<%= src %>);"
  />
  <% if caption || owner %>
    <figcaption class="o-figure__caption">
      <% if caption %>
        <%= caption %>
      <% end %>
      <% if owner %>
        <address class="o-figure__attribution"><%= owner %></address>
      <% end %>
    </figcaption>
  <% end %>
</figure>

<script>
  ahClient = new AssetHost.Client();
</script>