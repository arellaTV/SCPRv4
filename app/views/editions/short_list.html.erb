                    <input type="hidden" name="elqCookieWrite" value="0">
                </form>
            </aside>
        </section><!--/ .abstracts -->

        <div class="supportive">

            <section class="subscribe-hint">
              <header><h1>Subscribe to The Short List</h1></header>
              <p><a href="#subscribe-feature">Click here</a> to get The Short List delivered to your inbox every weekday.</p>
            </section>

            <section class="contents">
                <header><h1>Stories in this edition</h1></header>
                <nav>
                    <ol>
                        <% @edition.abstracts.each_with_index do |abstract, index| %>
                            <li><a href="#abstract-<%= (index+1).to_s.rjust(2, "0") %>"><%= abstract.headline %></a></li>
                        <% end %>
                    </ol>
                </nav>
            </section>

            <section class="share">
                <div class="clearfix">
                    <h1>Share this edition</h1>
                    <ul class="clearfix">
                        <li class="twitter social_twit" data-url="<%= @edition.public_url %>">
                            <a href="#" class="track-event twitter" data-ga-category="Article" data-ga-action="Share" data-ga-label="Twitter" data-url="<%= @edition.public_url %>" data-text="<%= u(@edition.short_list_type) %>">Share on Twitter</a>
                        </li>
                        <li class="facebook social_fb" data-url="<%= @edition.public_url %>">
                            <a href="#" class="track-event facebook" data-ga-category="Article" data-ga-action="Share" data-ga-label="Facebook" data-url="<%= @edition.public_url %>">Share on Facebook</a>
                        </li>
                    </ul>
                </div>
            </section>

        </div><!--/ .supportive -->
    </div><!--/ .inner -->
    </div><!--/ .pagecols -->
<% end %>
