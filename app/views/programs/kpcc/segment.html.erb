<% add_to_page_title @program.title %>
<% add_to_page_title @segment.headline %>
<% content_for :body_class, 'interior single segment' %>
<% content_for :opengraph do %><%= render_content @segment, "opengraph" %><% end %>
<%= render 'shared/ads/dfp_script_config', category: @segment.category %>

<% content_for :titling do %>
    <%= render :partial => 'shared/new/masthead/program_content_titling' %>
<% end %>


<%= cache ["show", "article-content", "v14", @program, @segment, @segment.published_episode] do %>
    <%= render "programs/kpcc/segment", article: @segment, full: true %>
<% end %>

<% cache ["show", "article-supportive", "v16", @segment] do %>
    <%= render "programs/kpcc/program_supportive" %>

  </div>
</div><!--/ .report -->

<!-- AdHost Slot: Membership Appeals -->
<div id="article-membership-appeal"></div>

<div class="placard-waystation"></div>
<% end %>

<%= comments_for @segment, header: false %>


<%= render 'programs/kpcc/featured_programs' %>

<% if @popular_articles %>
  <%= render 'shared/new/popular_articles',
      articles: @popular_articles.first(4),
      header: 'Popular Now on KPCC' %>
<% end %>
<% if @modal || @pledge %>
  <div id='exit-modal' class='exit-modal--hidden'>
    <div class='exit-modal__underlay'></div>
      <div class='exit-modal__modal'>
        <span class='exit-modal__close-button'>X</span>
        <div id='exit-modal__content'>
          <% if @modal %>
            <%= @modal.content.html_safe %>
          <% end %>
          <%= @pledge %>
        </div>
        <% if @form_name %>
          <form class="bound exit-modal__form" method="post" name="<%= @form_name %>" action="https://s1715082578.t.eloqua.com/e/f2" id="<%= @form_id %>" >
              <input value="<%= @form_name %>"  type="hidden" name="elqFormName"  />
              <input value="1715082578" type="hidden" name="elqSiteId"  />
              <input name="elqCampaignId" type="hidden"  />

              <input class="newsletter-email exit-modal__form--center" id="field0" name="emailAddress" type="email" placeholder="email@somedomain.com" value="" />
              <input class="newsletter-hidden-input" type="checkbox" value="on"  />
              <button type="submit" class="appeal-submit track-event exit-modal__form--center" data-ga-category="Article" data-ga-action="Subscribe" data-ga-label="<%= @program.title %>">Sign Up</button>
          </form>
        <% end %>
    </div>
  </div>
<% end %>
<%= javascript_include_tag "programs" %>