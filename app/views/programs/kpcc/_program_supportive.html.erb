<section class="supportive">
    <aside class="placard">
        <div class="ad widget">
            <%= render "shared/ads/dfp", ad_key: 'slot_a' %>
        </div>
    </aside>

    <aside class="placard">
        <div class="ad widget">
            <%= render "shared/ads/dfp", ad_key: 'slot_b' %>
            <p class="appeal"><a href="/support/underwriting/">Become a KPCC Sponsor</a></p>
        </div>
    </aside>



    <aside class="see-more">
        <header><h1>Recently on <%= @program.title %></h1></header>
        <nav>
          <% @program.segments.published.first(3).each do |segment| %>
              <article>
                  <%= link_to segment.public_path, class: "track-event", data: {"ga-category" => "Article", "ga-action" => "Clickthrough", "ga-label" => "More Sidebar Show Segment"} do %>
                      <%= smart_date_js segment.published_at %>
                      <h1><%= segment.short_headline %></h1>
                      <b><%= image_tag segment.asset.lsquare.url, alt: segment.asset.caption %></b>
                  <% end %>
              </article>
          <% end %>
        </nav>
    </aside>



    <aside class="overview">
      <% present @program, ProgramPresenter do |p| %>
      <header><h1>About <%= p.title %></h1></header>
      <div class="exposition" data-host="<%= p.slug %>"><!-- accepts: horn | rabe | cohenmartinez | mantle -->
        <p><%= p.description %></p>
        <footer><%= p.airtime %></footer>
      </div>
        <div class="externals">
          <ul>
            <%= p.facebook_link %>
            <%= p.twitter_link %>
            <%= p.podcast_link %>
            <%= p.rss_link %>
            <%= p.email_link %>
          </ul>
        </div>
      <% end %>
    </aside>

</section>