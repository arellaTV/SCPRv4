<div class="appellation bound">
  <h1><%= article.headline %></h1>
  <p><span>by <b><%= render_byline article %></b></span> <%= smart_date_js article.published_at %></p>
</div><!--/ .appellation -->

<div class="report">
    <div class="inner bound clearfix">


        <article class="prose">

            <%= render_asset article, context:"segments" %>

            <%= content_widget "new/primary_audio", article %>


            <%= render 'shared/new/social_share', article: article.to_article, cssClass: "pinned" %>


            <div class="prose-columns clearfix">

              <div class="primary">

              <%= content_widget "new/extra_audio", article %>


              <div class="prose-body">
                  <%= render_with_inline_assets article.to_article %>
                  <% if article.joined_bylines[:contributing].present? %>
                      <footer class="contributor">
                          <p><%= render_contributing_byline article %></p>
                      </footer>
                  <% end %>
                  <%= pij_source(article) %>
              </div><!--/ .prose-body -->
              
              <%= render 'shared/widgets/short_list_subscribe' %>

              <%= render 'shared/cwidgets/related_links', content:article %>

              <% if article.published_episode.present? %>
              <aside class="ancillary episode-contents">
                <header>
                  More from this episode
                  <cite>
                    <a href="<%= article.published_episode.public_path %>">
                      <%= @program.title %> for <%= article.published_episode.air_date.strftime("%B %d, %Y") %>
                    </a>
                  </cite>
                </header>
                <h1><%= link_to article.published_episode.headline, article.published_episode.public_path %></h1>
                <nav>
                  <ul>
                    <% article.episode_segments.each do |segment| %>
                      <li class="<%= ("selected" if article.id == segment.id) %>">
                        <%= link_to segment.short_headline, segment.public_path %>
                      </li>
                    <% end %>
                  </ul>
                </nav>
              </aside>
              <% end %>


            </div><!--/ .primary -->



            <div class="secondary">

              <%= render 'shared/new/social_share', article: article.to_article %>

              <div class="buddy-pairing clearfix">
                <%= content_widget 'new/comment_count', article %>
              </div>

            </div><!--/ .secondary -->


            </div><!--/ .prose-columns -->

        </article>
