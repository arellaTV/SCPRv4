<% content_for :main_class, "o-article o-article--segment" %>

<% content_for :header do %>
  <section id="o-prologue--program__segment" class="o-prologue o-prologue--program">
    <a class="o-prologue__logo" href="/programs/<%= @program.try(:slug) %>"><%= image_tag "show-logos/#{@program.try(:slug)}.svg" %></a>
    <span class="o-prologue__description">
      <div class="o-prologue__teaser">
        <%= @program.try(:teaser) %>
      </div>
      <address>Hosted by <%= @program.try(:host) %></address>
      <div class="o-prologue__airtime">
        <div>Airs <%= @program.try(:airtime) %></div>
        <div class="o-prologue__social-icons">
          <% present @program, ProgramPresenter do |p| %>
            <% ['twitter', 'facebook', 'podcast', 'email', 'rss'].each do |social| %>
              <% if p.send("#{social}_link").present? %>
                <a class="o-prologue__social-icon" href="<%= p.send("#{social}_link") %>" target="_blank">
                  <svg class="b-icon b-icon--size-sm b-icon--left">
                    <use class="b-icon--color-link" xlink:href="<%= "/static/images/scpr-sprite.svg#icon_line-#{social}" %>" />
                  </svg>
                </a>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </span>
  </section>
<% end %>

<!-- LEFT ASIDE -->
<aside class="l-column--left l--centerize" style="order: -1;">
  <%= cell :article_audio, @article, preview: true %>
  <%= cell :social_tools, @article, display: 'vert', preview: true %>
</aside>

<!-- HEADLINE -->
<%= cell :article_headline, @article, preview: true %>

<!-- RIGHT ASIDES -->
<%= cell(:ad, slot: "a", class: "l-column--right c-ad--placeholder-strip", id: "c-ad--a", attribution: false, order: -1, preview: true).call(:placeholder) %>

<%= cell(:ad, slot: "b", class: "l-column--right c-ad--placeholder-block", order: 1000, preview: true).call(:placeholder) %>

<hr class="b-rule l-column--right" />

<%= cell(:program_overview, @program, class: "l-column--right", order: 1000, preview: true).show do
  '<hr class="b-rule l-column--right" />'
end %>

<%= cell(:ad, slot: "c", class: "l-column--right c-ad--placeholder-block", order: 1001, preview: true).call(:placeholder) %>

<!-- CENTER CONTENT-->
<%= cell :article, @article, type: 'story', headline: false, preview: true %>

<%= cell :newsletter_appeal, @article, order: 999, preview: true %>

<hr class="o-article__rule--ending b-rule b-rule--primary-lightest b-rule--padded" style="order: 999;" />

<%= cell :social_tools, @article, display: 'horiz', order: 999, preview: true %>

<!-- FOOTER CONTENT -->
<hr class="o-article__rule--ending b-rule b-rule--secondary-alt b-rule--padded l-column--boundless" style="order: 1001;" />

<%= cell :epilogue, @article, class: "l-column--boundless", order: 1001, preview: true %>
