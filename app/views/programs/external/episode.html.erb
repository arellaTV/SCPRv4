<% add_to_page_title @episode.title %>

<header class="episode">
  <div class="row-fluid">
    <div class="span14">
      <h4><%= @episode.title %></h4>
      <p class="byline"><%= timestamp(@episode.air_date) %></p>
    </div>
    <div class="span10">
      <% if audio = @episode.audio.first %>
        <div class="right">
          <aside class="story-audio inline">
              <a href="<%= audio.url %>" class="play-btn audio-toggler" title="<%= h @episode.title %>" data-duration="<%= audio.duration %>"></a>
              <%= link_to "Listen to this episode", audio.url, :class => "audio-toggler play-text",  "data-duration" => audio.duration %>
              <a href="<%= audio.url %>" class="download">Download</a>
          </aside>
        </div>
      <% end %>
    </div>
  </div>
</header>

<section class="show-segments episode">
<%= any_to_list? @segments, title: "Segments" do %>
  <%= cache ["segment-teasers", @segments.to_a] do %>
    <% @segments.each do |segment| %>
      <div class="teaser cbase">
        <div class="row-fluid">
          <div class="span18">
            <div class="info">
              <h3><%= link_to segment.title, segment.external_url  %></h3>
              <span class="byline">
                <%= timestamp(segment.published_at) %> <span class="pipe">|</span> <%= render_byline segment %>
              </span>
            </div>

            <%= segment.teaser.html_safe %>
          </div> <!-- span12/9 -->
          <div class="span6">
            <div class="interact">
              <%= content_widget "primary_audio", segment, context: segment.external_program.slug %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>
</section>

<%= render "programs/shared/archive_select", program: @program %>
