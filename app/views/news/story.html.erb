<% add_to_page_title @story.try(:feature).try(:present?) ? "#{@story.try(:feature).try(:name)}: #{@story.try(:headline)}" : @story.try(:headline) %>
<% content_for :opengraph do %>
  <meta property="og:description" content="<%= h(strip_tags(@article.teaser)) %>">
  <meta property="og:title" content="<%= h(@article.short_title) %>">
  <meta property="og:type" content="<%= @OG_TYPE || "@article" %>">
  <meta property="og:url" content="<%= @article.public_url %>"/>
  <meta name="twitter:card" value="summary_large_image">
  <meta name="twitter:site" value="@kpcc">
  <meta name="twitter:url" value="<%= @article.public_url %>">
  <meta name="twitter:title" value="<%= h(@article.short_title) %>">
  <meta name="twitter:description" value="<%= h(strip_tags(@article.teaser)) %>">
  <meta property="article:published_time" content="<%=@article.public_datetime%>" />
  <meta property="article:modified_time" content="<%=@article.updated_at%>" />

  <% if @article.category %>
    <meta property="article:section" content="<%=h(@article.category.title)%>" />
  <% end %>

  <% if @article.assets.any? %>
    <% @article.assets.map(&:full).each do |image| %>
      <meta property="og:image" content="<%=image.url%>" />
      <meta property="og:image:type" content="image/jpeg" />
      <meta property="og:image:width" content="<%=image.width%>" />
      <meta property="og:image:height" content="<%=image.height%>" />
    <% end %> <%# assets %>
    <link rel="image_src" href="<%= @article.asset.full.url %>" />
    <meta name="twitter:image" content="<%= https_to_http(@article.asset.full.url) || "https://scpr.org/assets/kpcc-twitter-logo.png" %>">
  <% else %>
    <meta property="og:image" content="<%=image_url('meta/facebook.jpg')%>" />
    <meta name="twitter:image" content="<%=image_url('meta/twitter.jpg')%>">
  <% end %>
<% end %>

<% content_for :main_class, "o-article" %>
<%= render 'shared/ads/dfp_script_config', category: @category %>

<!-- LEFT ASIDE -->
<aside class="l-column--left l--centerize" style="order: -1;">
  <%= cell :article_audio, @article %>
  <%= cell :social_tools, @article, display: 'vert' %>
</aside>

<!-- RIGHT ASIDES -->
<%= cell(:ad, id: "c-ad--a", slot: "a", class: "l-column--right", attribution: false, order: -1).show do
  '<hr class="b-rule l-column--right" style="order: 5;" />'
end %>

<%= cell(:ad, slot: "b", class: "l-column--right", order: 995).show do
  '<hr class="b-rule l-column--right" style="order: 12;" />'
end %>

<%= cell(:category_cluster, @article.category, class: "l-column--right", order: 996, category: "Article", label: "More Sidebar Category") %>

<%= cell(:popular_articles, @popular_articles.try(:first, 3), class: "l-column--right", order: 997, category: "Article", label: "Popular Now Sidebar").call(:trio) %>

<%= cell :ad, slot: "c", class: "l-column--right", order: 1000 %>

<!-- ARTICLE BODY -->
<%= cell :article, @article, type: 'story' %>

<!-- MOAR STUFF -->
<%= cell :newsletter_appeal, @article, order: 991 %>

<hr class="o-article__rule--ending b-rule b-rule--primary-lightest", style="order: 992;" />

<%= cell :related_links, @article, order: 993 %>

<%= cell :social_tools, @article, display: 'horiz', order: 994 %>

<!-- FOOTER CONTENT -->
<hr class="o-article__rule--footer b-rule b-rule--secondary-alt b-rule--padded l-column--boundless" style="order: 998;" />

<%= cell :comments, @article, order: 999 %>

<%= cell :epilogue, @article, class: "l-column--boundless", order: 1001 %>
