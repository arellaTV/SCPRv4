<div class="span8">
  <div class="cbase offlead clearfix" data-vr-contentbox="">
    <h3 class="story-headline"><%= link_to article.short_title, article.public_url, "data-ga-category" => '@currentCategory', "data-ga-action" => "Article", "data-ga-label" => '@scrollDepth', class: "track-event" %></h3>
    <span class="byline">
      <%= article.byline %>
      <%= smart_date_js article.public_datetime, "data-window" => "8h", "data-relative" => "2h" %>
    </span>

    <%= render 'shared/feature_trait', article: article %>

    <p><%= article.teaser.html_safe %></p>
    <%= comment_count_for article %>
  </div>
</div> <!-- mq span8 -->
