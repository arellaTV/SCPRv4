<div class="cbase offlead" data-vr-contentbox="">
  <h3><%= link_to article.short_title, article.public_url, "data-ga-category" => '@currentCategory', "data-ga-action" => "Article", "data-ga-label" => '@scrollDepth', class: "track-event" %></h3>

  <div class="row-fluid">
    <% if article.assets.present? %>
      <div class="span6">
        <%= render_asset article, display: 'thumbnail' %>
      </div>
      <div class="span18">
    <% else %>
      <div class="span24">
    <% end %>
      <% if options[:show_byline] %>
        <span class="byline">
          <%= article.byline %>
          <%= smart_date_js article.public_datetime, "data-window" => "8h", "data-relative" => "2h" %>
        </span>

        <%= render 'shared/feature_trait', article: article %>

      <% end %>

      <p class="story-content clearfix"><%= article.teaser.html_safe %></p>
    </div> <!-- span -->
  </div> <!-- row -->
</div>
