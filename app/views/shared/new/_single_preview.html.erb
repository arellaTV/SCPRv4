<script src="//cdn.optimizely.com/js/1611751335.js"></script>
<% content_for :main_class, "o-article" %>

<!-- LEFT ASIDE -->
<aside class="l-column--left l--centerize" style="order: -1;">
  <%= cell :article_audio, @entry, preview: true %>
  <%= cell :social_tools, @entry, display: 'vert', preview: true %>
</aside>

<!-- RIGHT ASIDES -->
<%= cell(:ad, id: "c-ad--a", slot: "a", class: "l-column--right c-ad--placeholder-strip", attribution: false, order: -1, preview: true).call(:placeholder) %>

<%= cell(:ad, slot: "b", class: "l-column--right c-ad--placeholder-block", order: 995, preview: true).call(:placeholder) %>

<%= cell(:ad, slot: "c", class: "l-column--right c-ad--placeholder-block", order: 1000, preview: true).call(:placeholder) %>

<!-- ARTICLE BODY -->
<%= cell :article, @entry, type: 'story', preview: true %>

<!-- MOAR STUFF -->
<%= cell :newsletter_appeal, @entry, order: 991, preview: true %>

<hr class="o-article__rule--ending b-rule b-rule--primary-lightest", style="order: 992;" />

<%= cell :social_tools, @entry, display: 'horiz', order: 994, preview: true %>

<!-- FOOTER CONTENT -->
<%= cell :epilogue, @entry, class: "l-column--boundless", order: 1001, preview: true %>
