            <aside class="audio-actuator">
              <a href="#">
                <mark class="flourish"><b>This story includes audio.</b></mark>
                <div><span class="prompt">Listen to this story</span> <span class="duration">6 min 53 sec</span></div>
              </a>
            </aside>


            <div class="prose-columns clearfix">

              <div class="primary">

              <div class="prose-body">
                  <%= article.body.html_safe %>
                  <% if article.original_object.joined_bylines[:contributing].present? %>
                      <footer class="contributor">
                          <p><%= render_contributing_byline article.original_object %></p>
                      </footer>
                  <% end %>
              </div><!--/ .prose-body -->

              <% present article do |article_presenter| %>
                  <%= article_presenter.related_links %>
              <% end %>

              <aside class="other-segments" id="other-segments">
                  <h6>More from this <%= @segment.episodes.present? ? "Episode" : "Program" %></h6>
                  <ul>
                      <% @segment.sister_segments.each do |segment| %>
                      <li><%= link_to segment.short_headline, segment.public_path %></li>
                      <% end %>
                  </ul>
              </aside>

            </div><!--/ .primary -->
            


            <div class="secondary">
                SHARE<br /><br /><br /><br /><br />
                JUMP TO COMMENTS<br /><br /><br /><br /><br />
                PART OF A SERIES
            </div><!--/ .secondary -->


            </div><!--/ .prose-columns -->




            <%= render 'shared/new/social_share', article: article %>

            <footer class="comments-jump">
                <a href="#comments">
                    <mark>Join the discussion.</mark>
                    <span>Tap here to jump to this article's comments.</span>
                </a>
            </footer>

