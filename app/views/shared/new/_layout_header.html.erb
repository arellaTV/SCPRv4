<header class="masthead">
    <div class="inner bound">

        <% if context = @vertical || @category %>
            <section class="titling">
                <div class="brand clearfix">
                    <h1><%= link_to context.title, context.public_path %></h1>
                    <h2><%= context.description if context == @vertical && context.description.present? %></h2>
                </div>

                <%= content_for :masthead_ad %>
            </section><!--/ .titling -->

        <% elsif context = @program %>

            <section class="titling">
                <div class="brand">
                    <h1><%= link_to @program.title, @program.public_path %></h1>
                    <% present @program, ProgramPresenter do |p| %>
                      <nav class="subscribe">
                        <ul class="clearfix">
                          <% ['twitter', 'facebook', 'podcast', 'email', 'rss'].each do |social| %>
                            <% if p.send("#{social}_link").present? %>
                              <li><%= p.send("#{social}_link") %></li>
                            <% end %>
                          <% end %>
                        </ul>
                      </nav>
                    <% end %>
                </div><!--/ .brand -->
                <div class="details">
                  <h2><span><%= @program.teaser %></span> <mark>Hosted by <%= @program.host %></mark></h2>
                  <% present @program, ProgramPresenter do |p| %>
                    <%= p.airtime %>
                  <% end %>
                </div><!--/ .details -->
            </section><!--/ .titling -->
        <% end %>

        <%= render 'shared/new/main_nav' %>
    </div>
</header><!--/ .masthead -->
