<head>

    <% add_to_page_title @TITLE_ELEMENTS.present? ? "89.3 KPCC" : "89.3 KPCC - Southern California Public Radio" %>

    <title><%= page_title %></title>

    <!-- Meta tags which are the same across all pages -->
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta name="format-detection" content="telephone=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=Edge" />
    <meta property="fb:app_id" content="129848480405753" />
    <link rel="publisher" href="https://plus.google.com/108872361044769229886/" />

    <meta property="og:site_name" content="Southern California Public Radio" />
    <%= tag "meta", name: "keywords", content: meta_information[:keywords] || "KPCC, California, Southern California, Los Angeles, Pasadena, SCPR, Southern California Public Radio" %>
    <meta name="author" content="Southern California Public Radio" />

    <%= yield :opengraph %>

    <%= csrf_meta_tags %>


    <meta name="twitter:site" content="@kpcc"/>
    <meta name="twitter:card" content="summary"/>

    <%= tag "meta", name: "twitter:url", content: meta_information[:url] || "http://scpr.org" %>
    <%= tag "meta", name: "twitter:domain", content: meta_information[:url] || "http://scpr.org" %>
    <%= tag "meta", name: "twitter:title", content: h(meta_information[:title] || page_title) %>
    <%= tag "meta", name: "twitter:description", content: h(meta_information[:description] || "Member-supported public radio for Southern California. Award-winning local news and cultural programming alongside the best of NPR.") %>

    <%= tag "link", rel: "alternate", type: "application/rss+xml", title: "RSS", href: meta_information[:rss_feed] || "http://scpr.org/feeds/all_news" %>

    <%= favicon_link_tag '/favicon.ico' %>

    <!-- Optimizely script for A/B testing -->
    <script src="//cdn.optimizely.com/js/1611751335.js"></script>

    <%= stylesheet_link_tag "new/application", media: "screen" %>
    <%= javascript_include_tag "shared", "application" %>
    <script type="text/javascript" src="http://<%= Rails.configuration.x.assethost.server %>/assets/client.js?bust=20130523"></script>
    <%= javascript_include_tag "new/application" %>

    <!--[if lt IE 9]>
        <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <%= stylesheet_link_tag "new/ie-lt9", media: "screen" %>
        <%= javascript_include_tag "new/ie-lt9" %>
    <![endif]-->

    <script type="text/javascript" src="//use.typekit.net/vtu6xsq.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

    <script>
      // Function for lazy loading slideshow images
      function imgLoaded(img){
        var $img = $(img);

        $img.addClass('loaded');
      };
      // User agent detection to dynamically display the appropriate Apple App Banners to iPads and iPhones
      if (navigator.userAgent.match(/iPad/i)) {
        $('head').append('<meta name="apple-itunes-app" content="app-id=744160424"/>');
      }
      else if (navigator.userAgent.match(/iPhone/i) || navigator.userAgent.match(/iPod/i)) {
        $('head').append('<meta name="apple-itunes-app" content="app-id=293825085"/>');
      }
    </script>
    <script type="text/javascript" src="//nexus.ensighten.com/mogointeractive/1078/Bootstrap.js"></script>
    <%= render "shared/header/ad_scripts" %>

    <%= yield :head_tag %>
</head>
