<% title   ||= "KPCC IN PERSON NEWSLETTER" %>
<% caption ||= "Stay up to date with the latest information about our events:" %>
<% klass   ||= "" %>

<div class="appeal-newsletter events-newsletter ancillary <%= klass %>" id="appeal-newsletter">
  <div class="appeal-background">
    <div class="appeal-content">
    <h3 class="bound appeal-heading"><strong><%= title %></strong></h3>
      <p class="bound"><%= caption %></p>
      <form action="https://mcpostman.publicradio.org/subscription_requests" class="mcpostman-form" method="post">
        <input name="subscription_request[property_key]" type="hidden" value="0e6c885b-dcd5-4810-9418-3c529713eba9" /><input name="subscription_request[sde_external_key]" type="hidden" value="" />
        <div class="form-group" style="display: inline-block">
          <input type="email" name="subscription_request[fsm][Form_Email_Address]" id="subscription_request_fsm_Form_Email_Address" required="required" maxlength="254" class="newsletter-email form-control" placeholder="email@somedomain.com" />
        </div><input name="subscription_request[fsm][Form_BusinessUnit]" type="hidden" value="SCPR" /><input name="subscription_request[fsm][Form_FormName]" type="hidden" value="KPCCInPerson_Newsletter_Sub" /><input name="subscription_request[fsm][Form_Opt_In_Source]" type="hidden" value="SCPR Newsletter" />
        <input name="subscription_request[publication_lists][489]" type="hidden" value="on" />
        <button type="submit" class="btn appeal-submit track-event" data-ga-category="Article" data-ga-action="Subscribe" data-ga-label="Events Newsletter">Sign Up</button>
      </form>
    </div>
  </div>
</div>

