<section class="quadrant">
  <div class="inner bound">

    <header><h1><%= header %></h1></header>

  <% articles.each_slice(2).each do |row| %>
    <div class="rail clearfix">

    <% row.each do |article| %>
      <% article = article.original_object %>
      <article class="clearfix<%= " has-trait" if !article.issues.empty? %>">
        <div class="graphic">
          <div class="ratio">

          <%- if !article.related_issue.empty? %>
            <span class="issue"><%= link_to article.related_issue.first.title,article.related_issue.first.public_path %></span>
          <% end %>

            <div class="fill"></div>
            <b class="img-contain"><%= image_tag article.asset.eight.url %></b>
          </div><!--/ .ratio -->
        </div> <!--/ .graphic -->

        <div class="prose">
          <aside class="byline">
            <p class="author"><%= render_byline article %></p>

          <%- if article.feature_type.present? %>
            <mark class="trait <%= article.feature_type_name.downcase %>"><%= article.feature_type_name %></mark>
          <% end %>

          </aside>

          <h1><%= link_to article.short_title, article.public_path %></h1>
          <h2 class="date"><%= new_smart_date_js article.public_datetime, tag: 'span' %></h2>
          <p class="teaser"><%= article.teaser %></p>
        </div> <!--/ .prose -->
      </article>
    <% end %>

    </div><!--/ .rail -->
  <% end %>

  </div><!--/ .inner -->
</section><!--/ .quadrant -->
