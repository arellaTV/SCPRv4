<div class="inner-container">
  <div class="row-fluid">
    <div class="span6">
      <div class="section first">
        <h6>Categories</h6>
        <nav>
          <div class="row-fluid">
            <div class="span12">
              <ul>
                <li><a href="/local" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Local</a></li>
                <li><a href="/world" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">US &amp; World</a></li>
                <li><a href="/politics" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Politics</a></li>
                <li><a href="/environment" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Science</a></li>
                <li><a href="/arts" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Arts &amp; Entertainment</a></li>
              </ul>
            </div>

            <div class="span12">
              <ul>
                <li><a href="/business" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Business</a></li>
                <li><a href="/crime" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Crime &amp; Justice</a></li>
                <li><a href="/education" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Education</a></li>
                <li><a href="/health" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Health</a></li>
                <li><a href="/immigration" class="track-event" data-ga-category="MegaMenu" data-ga-action="Category" data-ga-label="News">Emerging Communities</a></li>
              </ul>
            </div>

          </div> <!-- row-fluid -->
          <ul class="content-types pull-down">
            <li><a href="http://audiovision.scpr.org" class="audiovision-icon track-event" data-ga-category="MegaMenu" data-ga-action="AudioVision" data-ga-label="News">AudioVision</a></li>
            <li><a href="/blogs/" class="track-event" data-ga-category="MegaMenu" data-ga-action="Blogs" data-ga-label="News">Blogs</a></li>
            <li><a href="/archive/<%= Time.zone.now.yesterday.strftime("%Y/%m/%d") %>/?section=news" class="track-event" data-ga-category="MegaMenu" data-ga-action="Archive" data-ga-label="News">Archive</a></li>
          </ul>
        </nav>
      </div> <!-- section -->
    </div> <!-- span -->

    <div class="span8">
      <div class="section">
        <h6>Latest News</h6>
        <%= render "shared/masthead/featured", articles: latest_news(2) %>
      </div> <!-- section -->
    </div> <!-- span -->

    <div class="span10">
      <div class="section">
        <h6>From Our Blogs</h6>
        <%= render "shared/masthead/from_our_blogs", entries: @latest_blogs %>
      </div> <!-- section -->
    </div> <!-- span -->
  </div> <!-- row fluid -->
</div> <!-- inner container -->
