                    <nav class="resources clearfix">
                      <% if @resources.presence %>
                        <% @resources.each do |resource| %>
                          <figure class="clearfix">
                              <div class="ratio">
                                <%= link_to resource.public_path, title: resource.short_title do %>
                                      <div class="fill"></div>
                                      <b class="img-contain"><%= image_tag resource.asset.lsquare.url %></b>
                                <% end %>
                              </div>
                              <figcaption>
