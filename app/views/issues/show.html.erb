<% add_to_page_title @tag.title %>
<% meta_tags(url: issue_url(@tag.slug)) %>
<% content_for :body_class, 'interior ronin' %>


<%= cache ["issues/show", "meta", "v2", @tag] do %>

<header class="preface">
    <h1><%= @tag.title %></h1>
    <div class="details clearfix">
        <div class="brief">
            <p><%= @tag.description %></p>
        </div>
        <aside class="timeline">
            <h2>KPCC has published a total of <mark><%= @count %> articles</mark> on <%= @tag.title %></h2>

        <div class="range">
            <dl class="began">
                <dt><%= format_date(@tag.created_at, with: '%-d %^b %Y') %></dt>
                <dd>Coverage began</dd>
            </dl>
            <dl class="latest">
                <dt><%= format_date(@tag.updated_at, with: '%-d %^b %Y') %></dt>
                <dd>Latest coverage</dd>
            </dl>
        </div>

        </aside>
    </div> <!--/ .details -->
</header>

<% end %>


<section class="backlog">

<%= cache ["issues/show", "list", "v2", @articles.to_a] do %>
    <%= render 'shared/new/waterfall_articles', articles: @articles, display_header: false %>
<% end %>

<%= paginate @articles, theme: 'new', outer_window: 1 %>

</section><!--/ .backlog -->
