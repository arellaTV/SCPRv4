<header class="preface">
    <h1><%= topic.title %></h1>
    <div class="details clearfix">
        <div class="brief">
            <p><%= topic.description %></p>
        </div>
        <aside class="timeline">
            <h2>KPCC has published a total of <mark><%= articles.results %> articles</mark> on <%= topic.title %></h2>
        <% if topic.began_at && topic.most_recent_at %>
          <div class="range">
              <dl class="began">
                  <dt><%= format_date(topic.began_at, with: '%-d %^b %Y') %></dt>
                  <dd>Coverage began</dd>
              </dl>
              <dl class="latest">
                  <dt><%= format_date(topic.most_recent_at, with: '%-d %^b %Y') %></dt>
                  <dd>Latest coverage</dd>
              </dl>
          </div>
        <% end %>

        </aside>
    </div> <!--/ .details -->
</header>