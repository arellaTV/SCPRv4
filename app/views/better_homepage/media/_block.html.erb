<div class="media media--block">
  <%= render partial: "better_homepage/media/shared/figure", locals: {url: content.article.public_url, asset_url: content.article.asset.full.url, asset_scheme: content.asset_scheme} %>
  <div class="media__content">
    <%= render partial: "better_homepage/media/shared/meta", locals: {audio: content.article.audio, public_datetime: content.article.public_datetime} %>
    <%= render partial: "better_homepage/media/shared/headline", locals: {headline: content.article.short_title, url: content.article.public_url} %>
    <%= render partial: "better_homepage/media/shared/extra", locals: {content: content} %>
  </div>
</div>
