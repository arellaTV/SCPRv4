<div class="story media media media--hp" data-obj-key='<%= content.article.obj_key %>'>
  <div class="media__content">
    <%= render partial: "better_homepage/media/shared/label", locals: {label: content.label} %>
    <%= render partial: "better_homepage/media/shared/headline", locals: {headline: content.article.short_title, url: content.article.public_url} %>
    <%= render partial: "better_homepage/media/shared/teaser", locals: {teaser: content.article.abstract} %>
    <%= render partial: "better_homepage/media/shared/meta", locals: {feature: content.article.feature, public_datetime: content.article.public_datetime, updated_at: content.article.updated_at} %>
    <%= render partial: "better_homepage/media/shared/extra", locals: {content: content} %>
  </div>
</div>