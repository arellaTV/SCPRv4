<% contents = homepage.content %>
<aside class="right-aside l-col l-col--sm-12 l-col--med-3">
  <%= render partial: "better_homepage/latest_headlines", locals: {content: content} %>
</aside>
<% contents.each_with_index do |content, index| %>

  <% source = content.content.try(:source) 
    tag = if source != "KPCC" or source != 'kpcc'
              source
           elsif content.tags__title?
              content.tags__title
           elsif content.program?
              content.program
           elsif content.category__title?
              content.category__title
           end
  %>
  <article class="hp-story l-col l-col--sm-12 l-col--med-7">
    <%= media_object content.asset_scheme, content: content, index: index, contents: contents %>
  </article>
  <%= render_right_aside index %>
<% end %>