<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <% if @problems[:any?] %>
      <h2>Looks like you got a few issues, dawg.</h2>
      <hr />
        <% if @problems[:related][:any?] %>
          <h3>Related Problems</h3>
          <hr />
          <%= render partial: "problems", locals: {gaps: @problems[:related][:gaps], overlaps: @problems[:related][:overlaps]} %>
        <% elsif @problems[:other][:any?] %>

          <h3>Other Problems</h3>
          <hr />
          <%= render partial: "problems", locals: {gaps: @problems[:other][:gaps], overlaps: @problems[:other][:overlaps]} %>
        <% end %>
      <% else %>
        <h2>Lookin' good, bro.</h2>
      <% end %>
    </div>
  </div>
</div>