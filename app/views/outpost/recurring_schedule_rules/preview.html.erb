<% if @overlaps.any? || @gaps.any? %>
  <h3>Looks like you got a few issues, dawg</h3>

  <% if @overlaps.any? %>
    <h2>Overlaps</h2>
      <ul>
        <% @overlaps.each do |overlap| %>
          <li>
            <strong><%= overlap[0].display_name %></strong> ends at <%= overlap[0].ends_at.try(:strftime, "%I:%M%P %-m/%-d") %> but <strong><%= overlap[1].display_name %></strong> starts at <%= overlap[1].starts_at.try(:strftime, "%I:%M%P %-m/%-d") %>
          </li>
        <% end %>
      </ul>
  <% end %>
  <% if @gaps.any? %>
    <h2>Gaps</h2>
    <ul>
      <% @gaps.each do |gap| %>
        <li>
          <strong><%= gap[0].display_name %></strong> ends at <%= gap[0].ends_at.try(:strftime, "%I:%M%P %-m/%-d") %> but <strong><%= gap[1].display_name %></strong> starts at <%= gap[1].starts_at.try(:strftime, "%I:%M%P %-m/%-d") %>
        </li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <h3>Lookin' good, bro.</h3>
<% end %>