<%= form_block "Details" do %>
  <%= f.input :title, input_html: { class: "sluggable" } %>
  <%= f.input :slug %>
  <%= f.input :description, label: "Tagline" %>

  <%= f.input :is_news %>
  <%= f.input :is_active, hint: "Should this category be treated as a Vertical?" %>
<% end %>


<%= form_block "Associations" do %>
  <%= f.association :comment_bucket %>
  <%= f.association :issues %>
  <%= f.association :bios, label: "Reporters" %>

  <div class="alert alert-info"><strong>Quotes</strong> To assign a Quote to a category, <%= link_to "create a new quote", outpost_quotes_path %>, set its status to "Live", and assign its category to this category. The most recently published quote will display on the Vertical page.</div>
<% end %>


<%= form_block "Content" do %>
  <div class="pull-right">
    <%= modal_toggle title: "Help: Verticals", id: "verticals-help-modal" do %>
      <h4>Featured Content</h4>
      This aggregator will populate the featured content on a Vertical page.
      The order of the articles determines where in the layout they show up.
      <br /><br />

      <strong>In Order:</strong>
      <ul>
        <li><strong>1.</strong> The top article on the page.</li>
        <li><strong>2, 3, 4, 5.</strong> The "Resources" section.</li>
        <li><strong>6.</strong> Featured Interactive</li>
      </ul>
    <% end %>
  </div>

  <div id="aggregator" class="aggregator"></div>
  <%= f.input :category_articles_json, as: :hidden, input_html: { id: "category_articles_json" } %>
<% end %>


<% content_for :footer do %>
  <script>
    aggregator = new outpost.Aggregator(
      "#aggregator", "#category_articles_json",
      <%= render_json("api/private/v2/articles/collection", articles: record.category_articles.includes(:article).map {|a| a.article.to_article}) %>,
      {
        apiType: "private",
        params: {
          limit: 20,
          types: 'news,blogs,segments,shells,queries',
          token: "<%= Rails.application.config.api['kpcc']['private']['api_token'] %>",
          order: "public_datetime",
          sort_mode: "desc",
          with: { is_live: "1" }
        }
      }
    );
  </script>
<% end %>
