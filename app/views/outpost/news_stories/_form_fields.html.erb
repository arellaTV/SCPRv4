<%= form_block "Meta" do %>
  <%= f.section "category" %>
  <%= f.section "feature" %>
  <%= f.association :tags, as: :grouped_select, collection: Tag.by_type, group_method: :tags, group_label_method: :name, input_html: { :multiple => true } %>
  <%= f.input :source, collection: NewsStory::SOURCES, include_blank: false %>
  <%= f.input :news_agency %>
  <%= f.input :is_from_pij, hint: "Was this story informed by PIJ Sources?" %>
  <%= f.input :publish_to_pmp, label: "Publish to PMP", hint: "Make story available in Public Media Platform?" do %>
  <%= check_box :news_story, :publish_to_pmp, {checked: f.object.publish_to_pmp?}, "true", "false" %>
  <% end %>
<% end %>

