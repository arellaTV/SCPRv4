<%= form_block "Short Details" do %>
  <%= f.input :short_headline, hint: "This will be generated on publish if left blank.", input_html: { class: "wide" }, wrapper_html: { class: "field-counter", data: { target: 50, fuzziness: 10 } } %>
  <%= f.input :teaser, as: :text, hint: "This will be generated on publish if left blank.", input_html: { class: "tiny" }, wrapper_html: { class: "field-counter", data: { target: 145, fuzziness: 20 } } %>
  <%= f.input(:abstract, input_html: { class: "cke-editor-basic" }) if f.object.respond_to?(:abstract) %>
  <%= f.input(:abstract_source, hint: "The byline displayed when used in an Edition.  Defaults to \"KPCC\" if left blank.", input_html: { class: "cke-editor-basic" }) if f.object.respond_to?(:abstract_source) %>
  <%= f.section "slug" %>
  <%= extra %>
<% end %>
