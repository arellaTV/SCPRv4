<!doctype html>
<html>
  <head>
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta charset="utf-8">
    <meta content="width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" name="viewport">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title>89.3 KPCC - Southern California Public Radio</title>
    <script src="https://use.typekit.net/cka2qre.js"></script>
    <script>try{Typekit.load({ async: true });}catch(e){}</script>
    <%= stylesheet_link_tag 'better_homepage/application' %>
    <%= javascript_include_tag 'better_homepage/application' %>
    <%= render "shared/ads/dfp_script_config", key_override: "/homepage" %>
    <%= render partial: "shared/header/ad_scripts" %>
  </head>

  <body onunload="console.log()">
    <div class='l-page'>
      <!-- figure out a better place to put this later -->
      <% if alert = BreakingNewsAlert.latest_visible_alert %>
        <%= cache ["breaking_alert",alert] do %>
          <%= render "breaking_news/breaking_news_alert", alert:alert %>
        <% end %>
      <% end %>
      <div id="global-pushdown"></div>
      <div id="homepage-pushdown"></div>
      <%= render partial: "layouts/better_homepage/header" %>
      <%= yield %>
      <%= render partial: "shared/footer/tracking_scripts" %>
      <%= javascript_include_tag "better_homepage/style-guide", :async => true %>
    </div>
  </body>
</html>
