<% content = homepage.content.includes(:content).map(&:content) %>
<%= cache ["homepage","lead_right",@homepage]+content do %>
<div class="homepage-lead lead-right">
  <div class="row-fluid">
    <div class="span12">
      <div class="offleads" data-vr-zone="Homepage Top Stories - Offleads">
        <%= render_content content[0..-2], "offlead" %>
      </div>
    </div>
    <div class="span12" data-vr-zone="Homepage Top Stories - Lead Story">
      <%= render_content content[-1], "lead" %>
    </div>
  </div>
</div> <!-- lead-right -->
<% end %>