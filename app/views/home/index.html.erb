<% if Time.now < Time.new(2015, 4, 19, 20) %>

<!-- BEGIN Voter Guide Promo -->
<div class="hero-election">
  <div class="row-fluid">
    <header class="span24 election-header">
        <h1>Los Angeles City Runoff Election</h1>
    </header>
  </div>
  <div class="row-fluid">
    <div class="span24">
      <div class="header-well">
        <h2 class="callout center-contents"><a href="http://projects.scpr.org/applications/california-elections-guide/2015/municipal/los-angeles-may-19/">View KPCC's Election Guide</a></h2>
      </div>
    </div>
  </div>
</div>
<!-- END Voter Guide Promo -->

<% else %>

<% cache "homepage-election-results1", expires_in: 10.minutes do %>

<% hashed = DataPoint.to_hash(@points) %>

<!-- BEGIN Homepage Elections Results -->
<div class="hero-election">
  <div class="row-fluid">
    <header class="span24 election-header">
      <h1>2015 LA Runoff Election Results</h1>
    </header>
  </div>
  <div class="results">
    <article class="results-block">


      <!-- City Council District 4 -->
      <div class="results-block">
        <header>
          <h2>City Council District 4</h2>

          <aside>(<%=hashed["local:reporting"]%>% Reporting)</aside>
        </header>

        <div class="clearfix">
          <% election_sort_tmp(@points, "local.cc_district_4").first(2).each do |dp| %>
          <section class="initiative local condensed">
            <div class="title">
              <h3><%=dp.title%></h3>
            </div>

            <div class="result relative">
              <div class="yes "><strong><%=dp.data_value%><b class="percentage">%</b></strong></div>
            </div>
          </section>
          <% end %>
        </div>
      </div>


      <!-- LAUSD School Board, 3rd District -->
      <div class="results-block">
        <header>
          <h2>LAUSD School Board, 3rd Dist.</h2>

          <aside>(<%=hashed["local:reporting"]%>% Reporting)</aside>
        </header>

        <div class="clearfix">
          <% election_sort_tmp(@points, "local.lausd_district_3").first(2).each do |dp| %>
          <section class="initiative local condensed">
            <div class="title">
              <h3><%=dp.title%></h3>
            </div>

            <div class="result relative">
              <div class="yes "><strong><%=dp.data_value%><b class="percentage">%</b></strong></div>
            </div>
          </section>
          <% end %>
        </div>
      </div>


      <!-- LAUSD School Board, 5th District -->
      <div class="results-block">
        <header>
          <h2>LAUSD School Board, 5th Dist.</h2>

          <aside>(<%=hashed["local:reporting"]%>% Reporting)</aside>
        </header>

        <div class="clearfix">
          <% election_sort_tmp(@points, "local.lausd_district_5").first(2).each do |dp| %>
          <section class="initiative local condensed">
            <div class="title">
              <h3><%=dp.title%></h3>
            </div>

            <div class="result relative">
              <div class="yes "><strong><%=dp.data_value%><b class="percentage">%</b></strong></div>
            </div>
          </section>
          <% end %>
        </div>
      </div>


      <!-- LAUSD School Board, 7rd District -->
      <div class="results-block">
        <header>
          <h2>LAUSD School Board, 7th Dist.</h2>

          <aside>(<%=hashed["local:reporting"]%>% Reporting)</aside>
        </header>

        <div class="clearfix">
          <% election_sort_tmp(@points, "local.lausd_district_7").first(2).each do |dp| %>
          <section class="initiative local condensed">
            <div class="title">
              <h3><%=dp.title%></h3>
            </div>

            <div class="result relative">
              <div class="yes "><strong><%=dp.data_value%><b class="percentage">%</b></strong></div>
            </div>
          </section>
          <% end %>
        </div>
      </div>

    </article>
  </div>
</div>
<!-- END Homepage Elections Results -->

<% end %>
<% end %>

<% if @homepage %>
  <%=
    begin
      render @homepage.base, homepage: @homepage
    rescue ActionView::MissingTemplate => e
      if Rails.env == "production"
        render "default", homepage: @homepage
      else
        raise e
      end
    end
  %>
<% end %>
  
<% if @featured_comment %>

  <div class="join-conversation-container home">
    <%= render 'shared/featured_comment/home', comment: @featured_comment %>
  </div> 

<% end %>

<div class="more-content">
  <div class="row-fluid">
    <div id="most-popular" class="span12">
      <h6>Most Popular</h6>
      <div class="tab-content">
        <div class="tab-pane active popular" id="pop_tab1" data-vr-zone="Most Popular">
          <%= raw Rails.cache.read("views/popular/viewed") %>
        </div>
      </div>
    </div>

    <div class="span12">
      <%= render "events/forum_events" %>
    </div>
  </div>
</div>

<% content_for :missed_it do %>
  <% if @homepage && @homepage.missed_it_bucket.present? %>
    <div class="more-news missed-it-bucket content-carousel">
      <h6 class="more-news-title">
        In Case You Missed It
        <div class="pager-nav">
          <a class="prev track-event" data-ga-category="Homepage" data-ga-action="In Cast You Missed It" data-ga-label="Nav Previous"></a>
          <a class="next track-event" data-ga-category="Homepage" data-ga-action="In Cast You Missed It" data-ga-label="Nav Next"></a>
        </div>
      </h6>
      <div class="carousel" data-current-page="1" data-vr-zone="In Case You Missed It"></div>
    </div> <!-- missed-it-bucket -->

    <% content_for :footer do %>
      <script>var carousel = new scpr.ContentCarousel({dataUrl: "<%= homepage_missed_it_content_path(@homepage.id) %>"});</script>
    <% end %>
  <% end %>
<% end %>

<% content_for :lower do %>
  <%= raw Rails.cache.read("home/sections") %>
<% end %>
