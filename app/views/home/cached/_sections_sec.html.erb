<div class="more-news">
  <h6 class="more-news-title">
    <%= link_to section.category.title, section.category.public_path, "data-ga-category" => '@currentCategory', "data-ga-action" => "Article", "data-ga-label" => '@scrollDepth', class: "track-event" %>
    <span class="more-link"><%= link_to "More", section.category.public_path %></span>
  </h6>

  <div class="row-fluid">
    <div class="span14">
      <div class="more-news-content" data-vr-zone="Homepage Section - <%= section.category.title %> - Lead Story">
        <%= render_content(section.articles.first, "sec_lead", show_byline: true) %>

        <ul class="additional-stories cbase" data-vr-zone="Homepage Section - <%= section.category.title %> - Additional Stories">
          <%= render_content section.articles[1..3], "headline" %>
        </ul>
      </div> <!-- more news content -->
    </div> <!-- span14 -->
    <div class="span10">
      <div class="related-content" data-vr-zone="Homepage Section - <%= section.category.title %> - Featured Content">
        <% if feature = section.featured_object %>
            <%= render_content feature, "sec_right" %>
        <% end %>
      </div> <!-- related content -->
    </div><!-- span10 -->
  </div> <!-- row fluid -->
</div><!-- more news -->
