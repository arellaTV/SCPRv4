<% events = upcoming_events_kpcc_in_person %>
<%= cache ["events","kpcc-in-person"]+events do %>
  <div class="events-kpcc-in-person" data-vr-zone="Upcoming KPCC In Person Events">
    <h6>Events with KPCC In Person</h6>
    <% events.each do |event| %>
      <div class="span12 cbase">
        <div class="event future" data-vr-contentbox>
          <div class="row-fluid">
            <div class="span8">
              <%= render_asset event, display: 'thumbnail', fallback: true %>
            </div>

            <div class="span16">
              <h4><%= link_to event.headline, event.public_path %></h4>
              <%= link_to format_date(event.starts_at, format: :event), event.public_path, class: "event-link" %>
            </div> <!-- span -->
          </div> <!-- row fluid -->
        </div> <!-- event future -->
      </div> <!-- span -->
    <% end %>
    <p class="more"><a href="/events/kpcc-in-person">View More KPCC In Person Events</a></p>
  </div> <!-- events-kpcc-in-person -->
<% end %>
