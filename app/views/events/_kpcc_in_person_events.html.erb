<% events = upcoming_events_forum() %>
<%= cache ["events","forum"]+events do %>
  <div class="events-forum" data-vr-zone="Upcoming Forum Events">
    <h6>Events at the Crawford Family Forum</h6>
    <% events.each do |event| %>
      <div class="span12 cbase">
        <div class="event future" data-vr-contentbox>
          <div class="row-fluid">
            <div class="span8">
              <%= render_asset event, display: 'thumbnail', fallback: true %>
            </div>

            <div class="span16">
              <h4><%= link_to event.headline, event.public_path %></h4>
              <%= link_to format_date(event.starts_at, format: :event), event.public_path, class: "event-link" %>
            </div> <!-- span -->
          </div> <!-- row fluid -->
        </div> <!-- event future -->
      </div> <!-- span -->
    <% end %>
    <p class="more"><a href="/events/forum">View More Forum Events</a></p>
  </div> <!-- events-forum -->
<% end %>
